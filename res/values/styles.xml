<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="btnStyleSubmit" parent="@android:style/Widget.Button.Small">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">@color/test</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_btn_submit</item>
       <item name="android:padding">4dip</item>
   </style>
       <style name="btnStylePrev" parent="@android:style/Widget.Button.Small">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">@color/test</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_btn_prev</item>
       <item name="android:padding">4dip</item>
   </style>
       <style name="btnStyleNext" parent="@android:style/Widget.Button.Small">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">@color/test</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_btn_next</item>
       <item name="android:padding">4dip</item>
   </style>
<style name="btnRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
    <item name="android:button">@drawable/custom_radio_button</item>
</style>
</resources>
