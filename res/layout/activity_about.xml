<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/splash_title_left_margin"
        android:paddingTop="30dp"
        android:text="ABOUT US"
        android:textColor="@color/aboutus"
        android:textSize="30dp" />

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_highline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_title"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center_vertical"

        android:paddingLeft="@dimen/splash_title_left_margin"
        android:text="HIGHLINE RESIDENTIAL"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_highline"
        android:layout_marginTop="14dp"
                android:layout_marginLeft="@dimen/default_text_left_margin"
        android:layout_marginRight="@dimen/default_text_left_margin"
        android:paddingBottom="@dimen/default_text_top_margin"
        android:text="Highline Residential is a full-service real estate brokerage firm committed to delivering exceptional service.  Founded in New York City with a sincere appreciation and respect for this ever-changing, vibrant and complex environment, we understand that purchasing, renting and selling real estate can be a stressful, sometimes intimidating process. With this in mind, our goal is to ensure that each client\’s real estate experience is one of effortless simplicity, with all particulars skillfully planned and flawlessly executed. Whether you enlist Highline to market your property, find a new home or search for the perfect investment property, our well trained and talented real estate professionals are prepared to help. Grounded in the belief that every client deserves honest, knowledgeable and personalized service, Highline’s agents are carefully selected for their demonstrated excellence and trust in these principles. Highline is based in Midtown in New York City. But you will find our agents entrenched in every corner of this amazing City – living, working and exploring. Supported by the latest in mobile and cloud technology, your Highline real estate agent is always within reach. Highline\’s diverse, hands-on executive team combines years of experience in brokerage, interior design and construction, property management and Internet &amp; mobile technology."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:scrollbars = "vertical"
        android:maxLines = "12" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_aboutus"
        android:layout_below="@+id/tv_aboutus"
        android:layout_marginTop="25dp"
        android:src="@drawable/hl_small" />

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_danconia_mgmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="DANCONIA MANAGEMENT" 
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_danconia_mgmt"
        android:layout_centerHorizontal="true"
        android:text="DANCONIA INTERIORS" 
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_aboutus"
        android:layout_below="@+id/tv_aboutus"
        android:text="HIGHLINE RESIDENTIAL"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
