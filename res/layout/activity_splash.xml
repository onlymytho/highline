<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SplashActivity" >

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_sponser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Daniel Chvatik and Henry Jung" />

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_brought_to_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_sponser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Brought to you by Highline Residental"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_brought_to_you"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/app_version" />

    <ImageView
        android:id="@+id/iv_hl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/hl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="79dp"
            android:src="@drawable/ic_launcher" />

        <com.hlresidential.aceyourexam.TextViewFont
            android:id="@+id/textView1"
            android:layout_width="170dp"
            android:layout_height="49dp"
            android:layout_marginTop="79dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:maxHeight="@android:dimen/app_icon_size"
            android:paddingLeft="@dimen/splash_title_left_margin"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

</RelativeLayout>
