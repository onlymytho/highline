<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:divider="@color/gray"
            android:dividerHeight="5dp">

<LinearLayout
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="horizontal" >

    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_test_id"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lit_test"
        android:layout_weight="0.04"
        android:paddingLeft="@dimen/default_text_left_margin"
        android:paddingTop="@dimen/default_text_top_margin"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <com.hlresidential.aceyourexam.TextViewFont
        android:id="@+id/tv_test_id_only"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
		android:visibility="gone" />
    
            <com.hlresidential.aceyourexam.TextViewFont
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/lit_test"
                android:layout_weight="0.03"
                android:paddingTop="@dimen/default_text_top_margin"
                android:text="30m"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <com.hlresidential.aceyourexam.TextViewFont
                android:id="@+id/tv_no_correct_no_rows"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.02"
                android:paddingTop="@dimen/default_text_top_margin"
                android:text="87"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
        
      

</LinearLayout>
            <com.hlresidential.aceyourexam.TextViewFont android:id="@id/android:empty"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#C0C0C0"
               android:textColor="#000000"
               android:text="No test taken yet."
               android:visibility="invisible"/>

  </RelativeLayout>

